<table class='table'>

  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= user.name %></td>
        <td>フォロー　: <%= user.followings.count %></br>
        フォロワー: <%= user.followers.count %></td>
        <td>
          <% if current_user != user%>
            <% if current_user.following?(user) %>
              <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-danger" %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-info" %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to "プロフィール", user, class: "btn btn-warning user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>