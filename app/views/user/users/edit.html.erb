<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>プロフィールを編集</h2>
      <%= form_with model:@user, local:true do |f| %>
        <%= render 'layouts/errors', obj: @user %>
        <div class="form-group">
          <%= f.label :"ニックネーム(20字以内)" %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :"自己紹介(50字以内)" %>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
      
        <div class="form-group row">
          <div class="col">
            <%= f.submit class: 'btn btn-primary' %>
          </div>
          <div class="col">
            <%= link_to "退会する", check_user_path(current_user.id), class:"btn btn-danger float-end" %>
          </div>
        </div>
        
      <% end %>
    </div>
  </div>
</div>