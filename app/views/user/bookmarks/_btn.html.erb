<% if novel.bookmarked_by?(current_user) %>
  <%= link_to novel_bookmarks_path(novel), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= novel.bookmarks.count %> ブックマーク
  <% end %>
<% else %>
  <%= link_to novel_bookmarks_path(novel), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= novel.bookmarks.count %> ブックマーク
  <% end %>
<% end %>