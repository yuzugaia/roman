<% if user_signed_in? %>
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :content %>
    <%= f.select :model, options_for_select({ "小説" => "novel", "ユーザー" => "user" }) %>
    <%= f.select :method, options_for_select({ "部分一致" => "partial" , "前方一致" => "forward", "後方一致" => "backward", "完全一致" => "perfect" }) %>
    <%= f.submit '検索' %>
  <% end %>
<% end %>