<div class='container px-5 px-sm-0'>
  <% @novels.each do |novel| %>
    <% if novel.errors.any? %>
      <%= render 'layouts/errors', obj: novel.errors %>
    <% end %>
  <% end %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', novel: @novel %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'index', novels: @novels %>
    </div>
  </div>
</div>