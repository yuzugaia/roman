<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% novels.each do |novel| %>
      <tr>
        <td>
          <%= link_to novel.title, edit_novel_path(novel.user, novel) %>
        </td>
        <td><%= novel.body %></td>
        <td id="favorite_btn_<%= novel.id %>">
          <%= render "user/bookmarks/btn", novel: novel %>
        </td>
        <td>コメント数: <%= novel.novel_comments.count %></td>
        <td>閲覧数: <%= novel.read_counts.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>